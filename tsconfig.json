{
    "compilerOptions": {
        "outDir":"dist/",
        "sourceMap": false,
        "noImplicitAny":false,
        "strict": true,
        "noImplicitReturns": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "lib": [
          "dom",
          "scripthost",
          "es2015",
          "es2015.promise"
        ],
        "allowSyntheticDefaultImports":true,
        "experimentalDecorators":true,
        "emitDecoratorMetadata":true,
        "listFiles":true,
        "removeComments":true,
        "suppressImplicitAnyIndexErrors":true,
        "allowJs":true,
        "baseUrl": "./"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
}